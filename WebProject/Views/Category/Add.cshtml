@model ViewModels.Category.CategoryViewModel;
@{
    TempData["Title"] = "Add Category";
}
<div class="h-75">
    <div class="card m-5">
        <div class="card-body">
            <form asp-controller="Category" asp-action="Add" method="post">
                <div class="">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                </div>
                <div class="m-2">
                    <button type="submit" class="btn btn-primary">@Resources.Buttons.CategorySubmit</button>
                </div>
            </form>
        </div>
    </div>
</div>